{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "npm-run-all --parallel start:*",
    "start:project1": "cd admin && npm run start",
    "start:project2": "cd backend-api && npm run start:dev",
    "start:project3": "cd frontend && npm run dev",
    "build": "npm-run-all --parallel build:*",
    "build:project1": "cd admin && npm run build",
    "build:project2": "cd backend-api && npm run build",
    "build:project3": "cd frontend && npm run build",
    "install": "npm-run-all --parallel install:*",
    "install:project1": "cd admin && npm install --force",
    "install:project2": "cd backend-api && npm install --force",
    "install:project3": "cd frontend && npm install --force"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
